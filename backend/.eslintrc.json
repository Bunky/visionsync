{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "global-require": "off",
        "max-len": ["error", { "code": 150 }],
        "no-underscore-dangle": "off",
        "consistent-return": "off",
        "no-use-before-define": "warn",
        "no-plusplus": "off",
        "comma-dangle": "off"
    }
}
